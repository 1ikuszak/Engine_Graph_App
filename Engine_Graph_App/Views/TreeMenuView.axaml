    <TreeView ItemsSource="{Binding Ships}">
        <TreeView.DataTemplates>
            <TreeDataTemplate DataType="models:Ship" ItemsSource="{Binding Engines}">
                <TextBlock Text="{Binding ShipName}" />
            </TreeDataTemplate>
            <TreeDataTemplate DataType="models:Engine" ItemsSource="{Binding Cylinders}">
                <TextBlock Text="{Binding EngineName}" />
            </TreeDataTemplate>
            <DataTemplate DataType="models:Cylinder">
                <CheckBox Content="{Binding CylinderName}"></CheckBox>
            </DataTemplate>
        </TreeView.DataTemplates>
    </TreeView>
    
</UserControl>
