<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Engine_Graph_App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Engine_Graph_App.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Engine_Graph_App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Engine_Graph_App">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Grid Grid.ColumnDefinitions="Auto, *">
        <Grid Grid.Column="0" Grid.RowDefinitions="Auto, *"> 
            <Border Grid.Row="0" BorderBrush="rgba(0,0,0,0.1)" BorderThickness="1" Padding="10">
                <TreeView ItemsSource="{Binding Ships}">
                    <TreeView.DataTemplates>
                        <TreeDataTemplate DataType="vm:ShipViewModel" ItemsSource="{Binding EngineViewModels}">
                            <TextBlock Text="{Binding Ship.Name}" />
                        </TreeDataTemplate>
                        <DataTemplate DataType="vm:EngineViewModel">
                            <CheckBox Content="{Binding Engine.Name}" 
                                      IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                        </DataTemplate>
                    </TreeView.DataTemplates>
                </TreeView>
            </Border>
            
            <Border Grid.Row="1" BorderBrush="rgba(0,0,0,0.1)" BorderThickness="1" Padding="10">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding EngineDataSheets}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander Header="{Binding EngineName}">
                                    <ContentControl x:Name="CustomGridContainer" Content="{Binding MainGrid}" />
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <Grid Grid.Column="1" Margin="10">
            <Grid RowDefinitions="Auto, *">
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Table" Command="{Binding ShowTable}"/>
                    <Button Content="Line" Command="{Binding ShowLineGraph}"/>
                    <Button Content="Scatter" Command="{Binding ShowScatterGraph}"/>
                </StackPanel>
                <views:ContentPresenterView Grid.Row="1"/>
            </Grid>
        </Grid>
        
    </Grid>
    
</Window>
