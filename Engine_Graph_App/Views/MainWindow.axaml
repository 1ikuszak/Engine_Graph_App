<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Engine_Graph_App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Engine_Graph_App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Engine_Graph_App">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Grid Grid.ColumnDefinitions="Auto, *">
        <Grid Grid.Column="0" Grid.RowDefinitions="Auto, *"> 
            <Border Grid.Row="0" BorderBrush="rgba(0,0,0,0.1)" BorderThickness="1" Padding="10">
                <TreeView ItemsSource="{Binding Ships}">
                    <TreeView.DataTemplates>
                        <TreeDataTemplate DataType="vm:ShipViewModel" ItemsSource="{Binding EngineViewModels}">
                            <TextBlock Text="{Binding Ship.Name}" />
                        </TreeDataTemplate>
                        <DataTemplate DataType="vm:EngineViewModel">
                            <CheckBox Content="{Binding Engine.Name}" 
                                      IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                        </DataTemplate>
                    </TreeView.DataTemplates>
                </TreeView>
            </Border>
            
            <Border Grid.Row="1" BorderBrush="rgba(0,0,0,0.1)" BorderThickness="1" Padding="10">
                <Grid>
                    <DataGrid ItemsSource="{Binding SelectedCylindersMeasurements}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Engine" Binding="{Binding Measurement.Cylinder.Engine.Name}" Width="Auto"/>
                            <DataGridTextColumn Header="Cylinder" Binding="{Binding Measurement.Cylinder.Name}" Width="Auto"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Measurement.Date}" Width="Auto"/>
                            <DataGridTextColumn Header="Pscv" Binding="{Binding Measurement.Pscv}" Width="Auto"/>
                            <DataGridTextColumn Header="TDC" Binding="{Binding Measurement.TDC}" Width="Auto"/>
                            <DataGridTextColumn Header="Pow" Binding="{Binding Measurement.Pow}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
    
</Window>
