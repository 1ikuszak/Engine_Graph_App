<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Engine_Graph_App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Engine_Graph_App.Views.EngineDetailsView"
             x:DataType="viewModels:EngineDetailsViewModel">
    
    <UserControl.Styles>
        <Style Selector="Button.name">
            <Setter Property="Padding" Value="4,6"/>
        </Style>
        
        <Style Selector="Button.date">
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="rgba(1,1,1,0.2)"/>
        </Style>
        
        <Style Selector="CheckBox">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Styles>
    
    <Panel>
        <TextBlock>hiiii</TextBlock>
    </Panel>
    
</UserControl>
