<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonia="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"
             xmlns:viewModels="clr-namespace:Engine_Graph_App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Engine_Graph_App.Views.LineGraphView"
             x:DataType="viewModels:LineGraphViewModel">

    <avalonia:CartesianChart Series="{Binding Series}" ZoomMode="X"
                             XAxes="{Binding XAxes}"
                             YAxes="{Binding YAxes}"
                             LegendPosition="Bottom"
                             LegendTextSize="12"
                             LegendTextPaint="{Binding LegendTextPaint}"
                             AnimationsSpeed="0:0:0.0" />
</UserControl>
